{
  "name": "universal-llm-cli",
  "version": "0.0.1",
  "description": "A universal CLI for local LLMs (Ollama) and OpenAI-compatible APIs with filesystem access tools.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "unicli": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "tsx src/index.ts chat",
    "dev": "tsx src/index.ts chat",
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mromasze/universal-cli.git"
  },
  "bugs": {
    "url": "https://github.com/mromasze/universal-cli/issues"
  },
  "homepage": "https://github.com/mromasze/universal-cli#readme",
  "keywords": [
    "cli",
    "llm",
    "ai",
    "ollama",
    "openai",
    "terminal",
    "chat",
    "local-ai",
    "agent",
    "filesystem"
  ],
  "author": "Mromasze",
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "chalk": "^5.3.0",
    "commander": "^14.0.2",
    "openai": "^4.71.0",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}